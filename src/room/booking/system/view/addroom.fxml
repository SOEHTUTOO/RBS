<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="room.booking.system.controller.AddRoomController">
   <children>
      <Label alignment="CENTER" layoutX="5.0" layoutY="5.0" prefHeight="50.0" prefWidth="390.0" style="-fx-background-color: #3333dd;" text="Add Room" textFill="WHITE">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Label>
      <Separator layoutY="56.0" prefHeight="12.0" prefWidth="400.0" />
      <VBox alignment="TOP_CENTER" layoutY="70.0" prefHeight="231.0" prefWidth="400.0" spacing="15.0" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
         <children>
            <JFXTextArea fx:id="roomIdField" focusColor="#3333dd" prefHeight="30.0" prefWidth="380.0" promptText="ROOM ID" unFocusColor="BLACK">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </JFXTextArea>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="150.0" text="Slots">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Spinner fx:id="slotSpinner" editable="true" prefHeight="33.0" prefWidth="231.0" />
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="30.0" prefWidth="150.0" text="Building">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <JFXComboBox fx:id="buildingCombox" focusColor="#3333dd" prefHeight="33.0" prefWidth="231.0" promptText="Choose Building" unFocusColor="BLACK" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="380.0" spacing="20.0">
               <children>
                  <JFXButton fx:id="saveBtn" onAction="#saveRoomDB" prefHeight="40.0" prefWidth="100.0" styleClass="custom_button" stylesheets="@../css/default.css" text="Save" />
                  <JFXButton fx:id="cancelBtn" onAction="#closeWindow" prefHeight="40.0" prefWidth="100.0" styleClass="custom_button" stylesheets="@../css/default.css" text="Close" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
         </padding></VBox>
   </children>
</AnchorPane>
